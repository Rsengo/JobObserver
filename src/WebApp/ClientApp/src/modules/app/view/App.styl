.app
    display flex
    width 100%
    height 100%
    justify-content flex-start
    align-items center
    flex-direction column 
    margin 0

    &__center
        flex 1 1 auto
        display flex
        width 100%
        height 100%
        flex-direction row
        justify-content center
        align-items center
        background-color lighten(#333,80%)

    &__content
        height 94%
        width 96%
        background-color white
        border-radius 10px
        border 2px solid #1a1a1a
        display flex
        flex-direction row    

html
    height 100%
    min-width 1000px
    min-height 600px

body 
    padding 0
    margin 0
    height 100%
    font-family Clear Sans,Arial,sans-serif 
    #root
        height 100%