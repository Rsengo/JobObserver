.nav-item
    width 100%
    height 50px
    color #000
    display flex
    justify-content flex-start
    align-items center
    text-decoration none
    padding-left 1rem
    &:hover
        background-color darken(#6fa53b, 25%)
        font-size 1.2rem
        border-bottom #fff 2px solid

    &_active
        background-color darken(#FF8000, 25%)
        font-size 1.2rem
        border-bottom #fff 2px solid
        padding-left 3rem

    &:first-child
        border-top-left-radius 7px        
   