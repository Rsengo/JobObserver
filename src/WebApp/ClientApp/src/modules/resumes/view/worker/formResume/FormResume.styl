.form-resume
    width 100%
    height 100%
    display flex
    flex-direction column
    justify-content flex-start
    align-items center
    background-color lighten(#6fa53b, 85%)
    border #6fa53b solid 2px
    border-top-right-radius 10px
    border-bottom-right-radius 10px

    &__require
        width 100%
        height 30%
        border-bottom 2px solid lighten(#1a1a1a, 75%)
        display flex
        flex-direction column
        justify-content space-around
        align-items center

        &-validation
            width 1.3rem
            height 1.3rem
            color white
            border-radius 100px
            margin-left auto
            display flex
            justify-content center
            align-items center
            margin-right 0.1rem
            margin-bottom 0.1rem

            &_valid
                &_false
                    background-color #bf6000
                &_true
                    background-color #6fa53b     
                    transform rotate(35deg) scaleX(-1)


    &__unrequire
        width 100%
        height 50%
        border-bottom 2px solid lighten(#1a1a1a, 75%)    

    &__title
        width 100%
        height 5%
        border-bottom 2px solid #6fa53b
        display flex
        justify-content center
        align-items center     
        font-size 1.2rem

    &__require-title,
    &__unrequire-title
        width 100%
        display flex
        justify-content center
        align-items center  

    &__require-title
        height 15%


    &__require-inputs-row 
        width 100%
        height 25%
        display flex
        flex-direction row
        justify-content space-around
        align-items center

    &__request
        height 10%
        margin-top auto
        display flex
        justify-content center
        align-items center    

