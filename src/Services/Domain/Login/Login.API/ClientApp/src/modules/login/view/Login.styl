.login
    width: 100%
    height: 100%
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: center

    &__header
        display: flex
        width: 100%
        height: 30%
        justify-content: center
        margin: 5% 0

    &__content
        display: flex
        width: 100%
        height: 50%
        justify-content: center
        margin: 5% 0

    &__controls
        display: flex
        width: 100%
        height: 15%
        justify-content: center
        margin: 5% 0