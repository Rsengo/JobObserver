@keyframes modalAnimation 
    0% 
        transform translateX(100%)
    100%  
        transform translateX(0)    

.auth-modal 
    position: fixed
    border-radius: 5px
    box-shadow: 0 3px 7px rgba(0,0,0,.25)
    top: 3.5rem
    right: 0
    background: rgba(0, 0, 0, 0.5);
    width: 20%
    height: 35rem;
    z-index: 6
    display: flex
    flex-direction column
    justify-content flex-start
    align-items center
    transition: all 0.4s ease-in-out
    -moz-transition: all 0.4s ease-in-out
    -webkit-transition: all 0.4s ease-in-out
    overflow: hidden
    animation modalAnimation 0.6s ease

    &__check-box {
        display: flex;
        color: #fff;
        text-transform: none;
        justify-content: space-around;
        width: 100%;
    }

    &__input {
        margin: 1rem;
    }

    &__container-button
        margin-top auto
        width 100%
        height 4rem
        display flex
        flex-direction row
        justify-content center
        align-items center

    &__sign-in
        width 100%
        height 4rem
        display flex
        flex-direction row
        justify-content center
        align-items center

    &__close
        background-color #1a1a1a 
        color #ffffff
        width 1.5rem
        height 1.5rem
        margin-right auto
        border #ffffff solid 1px
        margin-top 0.2rem
        margin-left 0.2rem
        display flex
        align-items center
        justify-content center
        cursor pointer
